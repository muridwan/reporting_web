            "ajax": {
                "url": '/Klaim/GetDataKlaimDate2?SDate=' + $sdate + "&EDate=" + $edate +"&TypeReport=PERSENKLAIMSUBRO&ListTOC="+$listTOC+"&ListBranch="+$listCab+"&COB="+$cobid+"&TOC="+$tocid+"&Branch="+$kodecab,
              "processing":true,
