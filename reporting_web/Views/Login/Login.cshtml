</head>
<body class="hold-transition login-page">
    <div class="login-box">
        @*<div class="login-logo">
            <a href="../../index2.html"><b>Admin</b>LTE</a>
        </div>*@
        <!-- /.login-logo -->
        <div class="spinnermodal" id="progressbar" style="display: none; z-index: 10001">
            <div style="position: fixed; z-index: 10001; top: 50%; left: 50%; height:65px">
                <img src="~/img/Spinner-2.gif" alt="Loading..." />
            </div>
        </div>
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Sign in to start your session</p>

                @*<form action="../../index3.html" method="post">*@
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="User Id" id="userid">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" class="form-control" placeholder="Password" id="password">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input type="checkbox" id="remember">
                                <label for="remember">
                                    Remember Me
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block" id="signin">Sign In</button>
                        </div>
                        <!-- /.col -->
                    </div>
                <!--</form>-->

                @*<div class="social-auth-links text-center mb-3">
                    <p>- OR -</p>
                    <a href="#" class="btn btn-block btn-primary">
                        <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
                    </a>
                    <a href="#" class="btn btn-block btn-danger">
                        <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
                    </a>
                </div>*@
                <!-- /.social-auth-links -->

                @*<p class="mb-1">
                    <a href="forgot-password.html">I forgot my password</a>
                </p>
                <p class="mb-0">
                    <a href="register.html" class="text-center">Register a new membership</a>
                </p>*@
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->
        <!-- jQuery -->
        <script src="~/FrontEnd/plugins/jquery/jquery.min.js"></script>
        <!-- Bootstrap 4 -->
        <script src="~/FrontEnd/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
        <!-- AdminLTE App -->
        <script src="~/FrontEnd/dist/js/adminlte.min.js"></script>
        <script>
            function showLoader() {
                //$("#progressbar").css("display", "");
                $("#progressbar").show();
            }

            function hideLoader() {
                setTimeout(function () {
                    //$("#progressbar").css("display", "none");
                    $("#progressbar").hide();
                }, 1000);
            }
            $(document).ready(function () {
                $('#signin').click(function () {
                    var data = {
                        "userid": $("#userid").val(),
                        "password": $("#password").val()
                    };
                    $.ajax({
                        url: "/Login/validateuser",
                        type: "POST",
                        data: JSON.stringify(data),
                        dataType: "json",
                        contentType: "application/json",
                        beforeSend: function(){
                            showLoader();
                        },
                        success: function (response) {
                            hideLoader();
                            if (response.Success) {
                                @*$.get("@Url.Action("Home", "Index")", function (data) {
                                    $('.container').html(data);
                                });*@
                                //alert(response.EmpID);
                                window.location.href = "@Url.Action("Index", "Home")";
                             }
                            else
                            {
                                alert("Invalid user id and password.");
                                window.location.href = "@Url.Action("Login", "Login")";
                            }
                        },
                        error: function () {
                            console.log('Login Fail!!!');
                        }
                    });
                });
            });
        </script>    


</body>
</html>
