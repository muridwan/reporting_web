          $branchdes += ",'" + $(this).text() + "'";
        });

        //TOC Selected
        var selected = $("#COBSel option:selected");    /*Current Selected Value*/
        var arrSelected = [];      /*Array to store multiple values in stack*/
            selected.each(function () {
                arrSelected.push($(this).val());    /*Stack the Value*/
                $tocid += " , TOC = " + $(this).val() +"";
                $listTOC.push($(this).val());
